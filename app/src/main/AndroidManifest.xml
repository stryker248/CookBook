<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="bme.msc.cookbook">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/application_name"
        android:supportsRtl="true"
        android:theme="@style/CookBookTheme">
        <activity android:name=".ui.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.about.AboutActivity" android:label="About" />
        <activity android:name=".ui.newrecipe.NewRecipeActivity" android:label="New recipe" />
        <activity android:name=".ui.recipedetails.RecipeDetailsActivity" android:label="Details" />
        <activity android:name=".ui.recipes.RecipesActivity" android:label="Recipes" />
        <activity android:name=".ui.savedrecipes.SavedRecipesActivity" android:label="Saved recipes" />
        <activity android:name=".ui.settings.SettingsActivity" android:label="Settings" />

        <meta-data android:name="DATABASE" android:value="cookbookdb.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="true" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="bme.msc.cookbook.model.orm" />
    </application>

</manifest>